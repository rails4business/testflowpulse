                  class: "inline-flex items-center gap-1" do |f| %>
              <%= f.file_field :file,
                    name: :file, accept: ".json,.csv", required: true,
                    class: "text-xs file:h-8 file:px-2 file:rounded file:border file:border-slate-300 file:bg-white" %>
              <%= f.submit "Importa",
