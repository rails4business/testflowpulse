  <script>
    const $ = (s, r=document)=>r.querySelector(s);
    const $$ = (s, r=document)=>Array.from(r.querySelectorAll(s));
    const data = JSON.parse(document.getElementById('config-json').textContent);

    function cardService(s){
      return `
      <article class="card rounded-xl border border-gray-200 bg-white dark:bg-slate-900 overflow-hidden transition-all">
        ${s.image_url ? `<img src="${s.image_url}" alt="${s.title}" class="w-full aspect-[16/9] object-cover bg-gray-100"/>` : ''}
        <div class="p-4 space-y-2">
          <h3 class="font-semibold">${s.title}</h3>
          <p class="text-sm text-gray-600 dark:text-slate-400">${s.description||''}</p>
        </div>
      </article>`;
    }

    function cardBrand(b){
      return `
      <a href="${b.url||'#'}" class="block card rounded-xl border border-gray-200 bg-white dark:bg-slate-900 overflow-hidden transition-all">
        ${b.image_url ? `<img src="${b.image_url}" alt="${b.title}" class="w-full aspect-[16/9] object-cover bg-gray-100"/>` : ''}
        <div class="p-4 space-y-2">
          <h3 class="font-semibold">${b.title}</h3>
          <p class="text-sm text-gray-600 dark:text-slate-400">${b.description||''}</p>
        </div>
      </a>`;
    }

    function render(){
      // services (tutti i visibili)
      const sWrap = document.getElementById('services-grid');
      sWrap.innerHTML = (data.services||[]).filter(x=>x.visible).map(cardService).join('');

      // brand per categoria
      const sections = {
        salute: document.getElementById('brands-salute'),
        lavoro: document.getElementById('brands-lavoro'),
        formazione: document.getElementById('brands-formazione')
      };
      const brands = (data.brands||[]).filter(x=>x.visible);
      Object.entries(sections).forEach(([cat,el]) => {
        const list = brands.filter(b => (b.category||'').toLowerCase()===cat);
        el.innerHTML = list.map(cardBrand).join('') || `<p class="text-sm text-gray-600 dark:text-slate-400">Nessun brand in questa sezione.</p>`;
      });
    }

    render();
  </script>
